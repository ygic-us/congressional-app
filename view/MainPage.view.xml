															<Text text="Hours" />
															<footer><Text text="{path: '/Entries', formatter: '.formatter.calcHours'} H"/></footer>
														</Column>
														<Column
															hAlign="End" demandPopin="false" minScreenWidth="Tablet">
															<Text text="Comments" wrapping="true"/>
															
														</Column>
													</columns>
													<items>
